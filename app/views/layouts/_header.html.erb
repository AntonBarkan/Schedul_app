<%= stylesheet_link_tag "dialog","fullcalendar","jquery-ui","style" %>
<%= javascript_include_tag "jrails1/fullcalendar.js","jrails1/jquery-
ui.js","jrails1/gcal.js","jrails1/jrails.js","jrails1/jquery.validate.js"%>



<% if( !signed_in? && !(request.path == '/' || request.path == '/signin' ||
        request.path == '/about' ||  request.path == '/contact' ||  request.path == '/news') )%>
    <script type="text/javascript">
        window.location.href='/'
    </script>
<% end %>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Schedule app", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>

          <% if signed_in? %>
              <li><%= link_to "Calendar", calendar_path %></li>
              <% if admin? %>
                  <li id="fat-menu" class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      Admin management <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">

                      <li><%= link_to "See all requests", scheduling_path %></li>
                      <li><%= link_to "Show all Users", showall_path%></li>
                      <li><%= link_to "Add user", new_user_path %></li>
                      <li><%= link_to "Admin settings", '#' %></li>

                    </ul>
                  </li>
              <% end %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Do schedule", current_user %></li>
                  <li><%= link_to "Settings", settings_path %></li>
                  <li><%= link_to "Help", help_path %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
