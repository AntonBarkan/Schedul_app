Edit info about <%= @user.name %>:</br>

<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :l_name, "Last name" %>
    <%= f.text_field :l_name %>

    <%= f.label :id_number %>
    <%= f.text_field :id_number %>

    <%= f.label :phone, "Phone number" %>
    <%= f.text_field :phone %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :position, 'Position - full/part' %>
    <%= f.radio_button 'position', 'full' %><%= f.label :position ,'full' %>
    <%= f.radio_button 'position', 'part' %><%= f.label :position ,'part' %>

    <%= f.label :shabat, "Working on shabat or not" %>
    <%= f.radio_button 'shabat', 'yes'  %><%= f.label :shabat ,'yes' %>
    <%= f.radio_button 'shabat', 'no' %><%= f.label :shabat ,'no' %>

    <%= f.label :admin, "Is Admin" %>
    <%= f.radio_button 'admin', 'no' %><%= f.label :admin,'no' %>
    <%= f.radio_button 'admin', 'yes' %><%= f.label :admin,'yes' %>


    <%= f.submit "Save changes",  class: "btn btn-large btn-primary" %>
<% end %>