<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :password %>
        <%= f.text_field :password %>

        <%= f.label :new_password, "Last name" %>
        <%= f.text_field :password %>

        <%= f.label :confirm %>
        <%= f.text_field :password %>

        <%= f.submit "Change password", class: "btn btn-large btn-primary" %>
        <%= button_to "Cancel", root_path, :class => "btn btn-large btn-primary", :method => :get  %>
    <% end %>

  </div>
</div>
