<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :id_number %>
        <%= f.text_field :id_number %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

        <%= f.label :position, 'Position - full/part' %>
        <%= f.radio_button 'position', 'full' %><%= f.label :position ,'full' %>
        <%= f.radio_button 'position', 'part' %><%= f.label :position ,'part' %>

        <%= f.label :shabat, "Working on shabat or not" %>
        <%= f.radio_button 'shabat', 'yes' %><%= f.label :shabat ,'yes' %>
        <%= f.radio_button 'shabat', 'no' %><%= f.label :shabat ,'no' %>


        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>Have account? <%= link_to "Sign in now!", signin_path %></p>
  </div>
</div>
